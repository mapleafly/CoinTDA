<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.lifxue.cointda.view.RootLayoutController">
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="150.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#handleEditData" prefHeight="40.0" prefWidth="100.0" text="数据录入">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#handlePieChart" prefHeight="40.0" prefWidth="100.0" text="品种比例图" />
            <Button mnemonicParsing="false" onAction="#handlePATable" prefHeight="40.0" prefWidth="100.0" text="平均价格分析表" />
            <Button mnemonicParsing="false" onAction="#handleSetting" prefHeight="40.0" prefWidth="100.0" text="设置" />
            <Button mnemonicParsing="false" onAction="#handleCloseApp" prefHeight="40.0" prefWidth="100.0" text="退出" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </left>
</BorderPane>
